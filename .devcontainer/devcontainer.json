{
  "name": "${localWorkspaceFolderBasename} Dev Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  // Features - additional tools and runtimes
  // Languages are in ./features/languages/, Tools are in ./features/tools/
  "features": {
    // ========== SYSTEM ==========
    // GPG and repository initialization (MUST run first before any apt operations)
    "./features/tools/gpg": {},
    // ========== LANGUAGES ==========
    // Node.js (must be first after gpg - required by claude-cli)
    "./features/languages/nodejs": {
      "version": "lts/*",
      "installYarn": true,
      "installPnpm": true,
      "globalPackages": "typescript,ts-node,eslint,prettier,vite,npm-check-updates,nodemon,pm2"
    },
    "./features/languages/carbon": {},
    "./features/languages/cpp": {},
    "./features/languages/dart-flutter": {},
    "./features/languages/elixir": {},
    "./features/languages/go": {},
    "./features/languages/java": {},
    "./features/languages/php": {},
    "./features/languages/python": {},
    "./features/languages/ruby": {},
    "./features/languages/rust": {},
    // ========== TOOLS ==========
    "./features/tools/bazel": {},
    "./features/tools/claude-cli": {},
    "./features/tools/cloud-cli": {},
    "./features/tools/hashicorp": {},
    "./features/tools/iac": {},
    // ========== EXTERNAL ==========
    // Docker support
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": false,
      "installDockerBuildx": true,
      "dockerDashComposeVersion": "v2"
    }
  },
  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        },
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true
      },
      "extensions": [
        "usernamehw.errorlens", // Affichage inline des erreurs et warnings
        "vscode-icons-team.vscode-icons", // Icônes pour les fichiers et dossiers
        "redhat.vscode-yaml", // Support YAML
        "tamasfe.even-better-toml", // Support TOML
        "editorconfig.editorconfig" // EditorConfig
      ]
    }
  },
  // ========== LIFECYCLE COMMANDS ==========
  // Order: initializeCommand → onCreateCommand → updateContentCommand → postCreateCommand → postStartCommand → postAttachCommand
  // Runs on HOST before container build (env setup, validation)
  "initializeCommand": "bash ${localWorkspaceFolder}/.devcontainer/hooks/lifecycle/initialize.sh",
  // Runs inside container after first start (initial setup)
  "onCreateCommand": "chmod +x /workspace/.devcontainer/hooks/lifecycle/*.sh && /workspace/.devcontainer/hooks/lifecycle/onCreate.sh",
  // Runs for cache/content refresh (prebuilds)
  "updateContentCommand": "/workspace/.devcontainer/hooks/lifecycle/updateContent.sh",
  // Runs once after container assigned to user (user-specific setup)
  "postCreateCommand": "/workspace/.devcontainer/hooks/lifecycle/postCreate.sh",
  // Runs every time container starts (MCP setup, services)
  "postStartCommand": "/workspace/.devcontainer/hooks/lifecycle/postStart.sh",
  // Runs when IDE connects (welcome message)
  "postAttachCommand": "/workspace/.devcontainer/hooks/lifecycle/postAttach.sh",
  // Forward ports
  "forwardPorts": [],
  // Run as user
  "remoteUser": "vscode",
  // Shutdown action
  "shutdownAction": "none"
}